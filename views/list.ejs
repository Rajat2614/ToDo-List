<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= listTitle%>
        </h1>
    </div>

    <div class="box">
        <% newListItems.forEach(function(todo){ %>
            <form action="/delete" method="post">

                <div class="item">
                    <input name="checkbox" value="<%= todo._id%>" type="checkbox" onChange="this.form.submit()">
                    <p>
                        <%= todo.item %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
            <% }); %>

                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="Add more tasks" autocomplete="off">
                    <button type="submit" name="list" value= "<%= listTitle %>">+</button>
                </form>
    </div>

    <%- include("footer") -%>